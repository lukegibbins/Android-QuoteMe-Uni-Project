<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewRespond"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RespondQuoteActivity">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RespondQuoteActivity">

        <TextView
            android:id="@+id/textViewQuoteDetails"
            android:layout_width="308dp"
            android:layout_height="33dp"
            android:layout_marginTop="16dp"
            android:gravity="fill_vertical|center"
            android:text="Quote details"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="359dp"
            android:layout_height="418dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:paddingBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewQuoteDetails">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="89dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|fill"
                    android:paddingBottom="20dp"
                    android:text="Title"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|fill"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="89dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|fill"
                    android:paddingBottom="20dp"
                    android:text="Location"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|fill"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="89dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|fill"
                    android:paddingBottom="20dp"
                    android:text="Contact"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|fill"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="89dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|fill"
                    android:paddingBottom="20dp"
                    android:text="Vendor"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/textView78"
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|fill"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="89dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|fill"
                    android:paddingBottom="20dp"
                    android:text="Description"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/textView79"
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|fill"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="89dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|fill"
                    android:paddingBottom="22dp"
                    android:text="Image"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/textView7f"
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|fill"
                    android:textSize="24sp" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btnAcceptQuote"
            android:layout_width="152dp"
            android:layout_height="54dp"
            android:layout_marginTop="348dp"
            android:text="Accept"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/table_layout" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>